{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs", 
    "lib": [ "dom", "es6" ],
    "rootDir": "src",
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
      "paths": {
        "@/*": ["src"],
        "@api/*": ["src/api/*"],
        "@assets/*": ["src/assets/*"],
        "@components/*": ["src/components/*"],
        "@store/*": ["src/store/*"],
        "@services/*": ["src/services/*"],
        "@styles/*": ["src/styles/*"],
        "@utils/*": ["src/utils/*"],
        "@views/*": ["src/views/*"],
        "@typings/*": ["src/typings/*"],
      }
  },
  "include": ["src"],
  "exclude": [ "node_modules" ]
}
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs", 
    "lib": [ "dom", "es6" ],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
  },
  "exclude": [ "node_modules" ],
  "include": [ "src/**/*.ts" ]
}
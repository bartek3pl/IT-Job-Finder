{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig-build.json",
    "dev": "nodemon src/server.ts --exec ts-node src/server.ts -e ts,graphql",
    "test": "mocha --recursive -r ts-node/register ./src/test/**/*.ts",
    "deploy": "git add . && git commit -m heroku && git push heroku master",
    "format": "npx prettier --write ./src/**/*.ts",
    "format:check": "npx prettier ./src/**/*.ts",
    "lint": "npx eslint ./src/**/*.ts --fix",
    "lint:check": "npx eslint ./src/**/*.ts",
    "generate-types": "graphql-codegen --config codegen.yml",
    "generate-types:watch": "graphql-codegen --config codegen.yml --watch"
  },
  "author": "Bart≈Çomiej Hildebrandt",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run generate-types && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|json)": [
      "prettier --write",
      "git add"
    ],
    "**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-resolvers": "1.19.0",
    "@types/bcrypt": "^3.0.1",
    "@types/chai": "^4.2.16",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "graphql-import-node": "0.0.4",
    "graphql-tools": "^7.0.4",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1"
  },
  "dependencies": {
    "apollo-server-express": "^2.22.2",
    "bcrypt": "^5.0.1",
    "chai": "^4.3.4",
    "cors": "^2.8.5",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^8.3.2",
    "mongoose": "^5.12.3",
    "postcode-validator": "^3.2.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "engines": {
    "node": "12.9.1"
  }
}
